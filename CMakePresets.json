{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "description": "Base Build Configuration",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "generator": "Ninja",
      "cacheVariables": {
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/build-scripts"
      },
      "hidden": true
    },
    {
      "name": "windows",
      "description": "Windows Build Configuration",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "hidden": true
    },
    {
      "name": "linux",
      "description": "Linux Build Configuration",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "hidden": true
    },
    {
      "name": "msys",
      "description": "MinGW/MSYS/MSYS2 Build Configuration",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "MSYS"
      },
      "hidden": true
    },
    {
      "name": "MSVC",
      "inherits": [ "windows" ],
      "description": "Visual C++ Configuration",
      "toolchainFile": "${sourceDir}/build-scripts/MSVC.cmake",
      "hidden": true
    },
    {
      "name": "x64-windows-static",
      "inherits": [ "base", "MSVC" ],
      "description": "Link Statically",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows-static",
        "DYNAMIC_LINKING": "False"
      },
      "hidden": true
    },
    {
      "name": "windows-tiles-sounds-x64-msvc",
      "inherits": [ "x64-windows-static" ],
      "displayName": "x64 Release",
      "description": "Target Windows (64-bit) with the Visual Studio development environment. (RelWithDebInfo)",
      "cacheVariables": {
        "CMAKE_PROJECT_INCLUDE_BEFORE": "${sourceDir}/build-scripts/windows-tiles-sounds-x64-msvc.cmake",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CURSES": "False",
        "LOCALIZE": "True",
        "TILES": "True"
      }
    },
    {
      "name": "x64-debug",
      "inherits": [ "x64-windows-static" ],
      "displayName": "x64 Debug",
      "description": "Target Windows (64-bit) with the Visual Studio development environment. (Debug)",
      "cacheVariables": {
        "CMAKE_PROJECT_INCLUDE_BEFORE": "${sourceDir}/build-scripts/FindVCPKG.cmake",
        "CMAKE_BUILD_TYPE": "Debug",
        "CURSES": "False",
        "LOCALIZE": "False",
        "TILES": "True"
      }
    },
    {
      "name": "linux-curses-x64",
      "inherits": [ "base", "linux" ],
      "displayName": "Linux Curses x64",
      "description": "Target Linux (64-bit) with the GCC compiler suite. (RelWithDebInfo)",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CURSES": "True",
        "LOCALIZE": "True",
        "TILES": "False",
        "SOUND": "False"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-curses-x64",
      "configurePreset": "linux-curses-x64",
      "verbose": true
    }
  ]
}
