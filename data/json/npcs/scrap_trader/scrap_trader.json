  {
    "type": "talk_topic",
    "id": "TALK_NPC_SCRAP_TRADER_INTRO",
    "dynamic_line": "Do you need something?",
    "responses": [
      { "text": "What's your story?", "topic": "TALK_NPC_SCRAP_TRADER_STORY" },
      { "text": "Why stay here of all places?", "topic": "TALK_NPC_SCRAP_TRADER_FORT" },
