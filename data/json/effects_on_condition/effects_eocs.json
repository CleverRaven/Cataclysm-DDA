[
  {
    "type": "effect_on_condition",
    "id": "bad_food_mood_debuff",
    "recurrence": [ "1 hours", "2 hours" ],
    "condition": { "u_has_effect": "bad_food_ennui" },
    "//": "duration doesn't matter, since morale is added every hour, therefore it will always be mismatched with bad_food_ennui; instead, if you loose bad_food_ennui effect, you will lost the mood debuff also",
    "effect": [
      {
        "u_add_morale": "morale_bad_protein_bar",
        "bonus": { "math": [ "u_vitamin('bad_food') / -10" ] },
        "max_bonus": { "math": [ "u_vitamin('bad_food') / -4" ] },
        "duration": "1 days",
        "decay_start": "1 days"
      }
    ],
    "false_effect": [ { "u_lose_morale": "morale_bad_protein_bar" } ]
  },
  {
    "type": "effect_on_condition",
    "id": "bile_mood_debuff",
    "recurrence": [ "1 seconds", "1 seconds" ],
    "condition": { "or": [ { "u_has_effect": "bile" }, { "u_has_effect": "boomered" } ] },
    "effect": [
      {
        "u_add_morale": "morale_disgusted",
        "bonus": -5,
        "max_bonus": -15,
        "duration": "1 hours",
        "decay_start": "1 hours"
      }
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "bile_in_eyes",
    "recurrence": [ "1 seconds", "1 seconds" ],
    "condition": { "or": [ { "u_has_effect": "bile", "bodypart": "eyes" } ] },
    "effect": [
      { "u_add_effect": "boomered", "target_part": "eyes", "duration": "12 seconds" },
      { "u_lose_effect": "bile", "target_part": "eyes" }
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "acid_wash_off_check",
    "recurrence": [ "2 seconds", "4 seconds" ],
    "condition": { "and": [ "u_is_in_water", { "u_has_flag": "WASHABLE_EFFECT" } ] },
    "effect": [
      {
        "foreach": "ids",
        "var": { "context_val": "id" },
        "target": "bodypart",
        "effect": [
          { "u_message": "The water washes the noxious substances from your body.", "type": "good" },
          { "u_lose_effect": "corroding", "target_part": { "context_val": "id" } },
          { "u_lose_effect": "bile", "target_part": { "context_val": "id" } },
          { "u_lose_effect": "boomered", "target_part": { "context_val": "id" } }
        ]
      }
    ]
  }
