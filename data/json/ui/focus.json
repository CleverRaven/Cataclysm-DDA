[
  {
    "id": "focus_num",
    "type": "widget",
    "label": "Focus",
    "var": "focus",
    "style": "number",
    "colors": [ "c_red", "c_light_red", "c_light_green", "c_green" ]
  },
  {
    "id": "focus_change_num",
    "type": "widget",
    "label": "Focus Change",
    "var": "focus_change",
    "style": "number"
  },
  {
    "id": "focus_change_arrow",
    "type": "widget",
    "style": "sym",
    "flags": [ "W_LABEL_NONE" ],
    "clauses": [
      {
        "id": "focus_up",
        "sym": "↥",
        "color": "light_green",
        "condition": { "compare_int": [ { "u_val": "focus_change" }, ">", { "const": 0 } ] }
      },
      {
        "id": "focus_down",
        "sym": "↧",
        "color": "light_red",
        "condition": { "compare_int": [ { "u_val": "focus_change" }, "<", { "const": 0 } ] }
      }
    ]
  },
  {
    "id": "focus_and_change_layout",
    "type": "widget",
    "label": "Focus/Change",
    "arrange": "rows",
    "style": "layout",
    "widgets": [ "focus_num", "focus_change_num", "focus_change_arrow" ]
  }
]
