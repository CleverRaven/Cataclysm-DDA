[
  {
    "id": "weight_desc_label",
    "type": "widget",
    "label": "Weight",
    "style": "text",
    "clauses": [
      {
        "id": "skeletal",
        "text": "Skeletal",
        "color": "red",
        "//": "BMR slows down here as strength stat starts compensating for lack of fat",
        "condition": { "compare_int": [ { "u_val": "bmi_permil" }, "<=", { "const": 1000 } ] }
      },
      {
        "id": "emaciated",
        "text": "Emaciated",
        "color": "light_red",
        "//": "BMR slows down here as strength stat starts compensating for lack of fat",
        "condition": {
          "and": [
            { "compare_int": [ { "u_val": "bmi_permil" }, ">", { "const": 1000 } ] },
            { "compare_int": [ { "u_val": "bmi_permil" }, "<=", { "const": 2000 } ] }
          ]
        }
      },
      {
        "id": "underweight",
        "text": "Underweight",
        "color": "yellow",
        "//": "between 2 and 3.5 points of BMI from bodyfat (8-14% of normal healthy weight is fat)",
        "condition": {
          "and": [
            { "compare_int": [ { "u_val": "bmi_permil" }, ">", { "const": 2000 } ] },
            { "compare_int": [ { "u_val": "bmi_permil" }, "<=", { "const": 3500 } ] }
          ]
        }
      },
      {
        "id": "normal",
        "text": "Normal",
        "color": "light_gray",
        "//": "3.5-5 points of BMI from fat (14-20% of body weight is fat)",
        "condition": {
          "and": [
            { "compare_int": [ { "u_val": "bmi_permil" }, ">", { "const": 3500 } ] },
            { "compare_int": [ { "u_val": "bmi_permil" }, "<=", { "const": 5000 } ] }
          ]
        }
      },
      {
        "id": "overweight",
        "text": "Overweight",
        "color": "yellow",
        "//": "5-10 points of BMI from fat (20-33% of body weight is fat)",
        "condition": {
          "and": [
            { "compare_int": [ { "u_val": "bmi_permil" }, ">", { "const": 5000 } ] },
            { "compare_int": [ { "u_val": "bmi_permil" }, "<=", { "const": 10000 } ] }
          ]
        }
      },
      {
        "id": "obese",
        "text": "Obese",
        "color": "light_red",
        "//": "10-15 points of BMI from fat (33-43% of body weight is fat)",
        "condition": {
          "and": [
            { "compare_int": [ { "u_val": "bmi_permil" }, ">", { "const": 10000 } ] },
            { "compare_int": [ { "u_val": "bmi_permil" }, "<=", { "const": 15000 } ] }
          ]
        }
      },
      {
        "id": "very_obese",
        "text": "Very Obese",
        "color": "red",
        "//": "15-20 points of BMI from fat (43-50% of normal healthy body weight is fat)",
        "condition": {
          "and": [
            { "compare_int": [ { "u_val": "bmi_permil" }, ">", { "const": 15000 } ] },
            { "compare_int": [ { "u_val": "bmi_permil" }, "<=", { "const": 20000 } ] }
          ]
        }
      },
      {
        "id": "morbidly_obese",
        "text": "Morbidly Obese",
        "color": "red",
        "//": "20+ points of BMI from fat (more than half your bodyweight is fat)",
        "condition": { "compare_int": [ { "u_val": "bmi_permil" }, ">", { "const": 20000 } ] }
      }
    ]
  },
  {
    "id": "weight_desc_no_label",
    "type": "widget",
    "copy-from": "weight_desc_label",
    "flags": [ "W_LABEL_NONE" ]
  }
]
