[
  {
    "id": "zenfs_movement_block",
	"type": "widget",
	"style": "layout",
	"arrange": "rows",
	"width": 18,
	"widgets": [ "zenfs_move_mode", "zenfs_move_count_cost" ]
  },
  {
    "id": "zenfs_move_mode",
	"type": "widget",
	"style": "layout",
	"arrange": "minimum_columns",
	"width": 18,
	"widgets": [ "zenfs_move_label", "zenfs_move_desc" ]
  },
  {
    "id": "zenfs_move_count_cost",
	"type": "widget",
	"style": "layout",
	"arrange": "minimum_columns",
	"width": 18,
	"widgets": [ "zenfs_move_count", "zenfs_move_cost" ]
  },
  {
    "id": "zenfs_move_label",
    "type": "widget",
    "style": "text",
    "string": "<color_cyan>Movement</color>",
	"width": 8,
    "flags": [ "W_LABEL_NONE" ]
  },
  {
    "id": "zenfs_move_desc",
    "type": "widget",
    "style": "text",
	"arrange": "rows",
	"width": 9,
    "copy-from": "move_mode_template",
    "flags": [ "W_LABEL_NONE" ]
  },
  {
    "id": "zenfs_move_count",
    "type": "widget",
    "label": "<color_cyan>Count</color>",
    "var": "move",
	"width": 8,
    "style": "number"
  },
  {
    "id": "zenfs_move_cost",
    "type": "widget",
    "label": "<color_cyan>Cost</color>",
    "style": "number",
    "var": "move_cost",
    "colors": [ "c_green", "c_light_green", "c_yellow", "c_light_red", "c_red", "h_red" ]
  }
]