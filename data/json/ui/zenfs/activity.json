[
  {
    "id": "zenfs_activity_desc",
    "type": "widget",
    "label": "Activity",
    "style": "text",
    "width": 10,
    "text_align": "right",
    "clauses": [
      {
        "id": "none",
        "text": { "str": "Negligible", "ctxt": "activity description" },
        "color": "dark_gray",
        "condition": { "math": [ "u_val('activity_level') == 0" ] }
      },
      {
        "id": "light",
        "text": { "str": "Light", "ctxt": "activity description" },
        "color": "green",
        "condition": { "math": [ "u_val('activity_level') == 1" ] }
      },
      {
        "id": "moderate",
        "text": { "str": "Moderate", "ctxt": "activity description" },
        "color": "light_green",
        "condition": { "math": [ "u_val('activity_level') == 2" ] }
      },
      {
        "id": "brisk",
        "text": { "str": "Brisk", "ctxt": "activity description" },
        "color": "yellow",
        "condition": { "math": [ "u_val('activity_level') == 3" ] }
      },
      {
        "id": "active",
        "text": { "str": "Intense", "ctxt": "activity description" },
        "color": "light_red",
        "condition": { "math": [ "u_val('activity_level') == 4" ] }
      },
      {
        "id": "extreme",
        "text": { "str": "Extreme", "ctxt": "activity description" },
        "color": "red",
        "condition": { "math": [ "u_val('activity_level') == 5" ] }
      }
    ]
  },
  {
    "id": "zenfs_activity_desc_A",
    "type": "widget",
    "copy-from": "zenfs_activity_desc",
    "label": "A"
  }
]
