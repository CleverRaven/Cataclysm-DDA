[
  {
    "id": "zenfs_thirst_label",
    "type": "widget",
    "style": "text",
    "string": "  <color_dark_gray>Thirst</color>",
    "width": 7,
    "flags": [ "W_LABEL_NONE" ]
  },
  {
    "id": "zenfs_thirst_no_label",
    "type": "widget",
    "//": "Instant thirst takes stomach contents into account",
    "style": "text",
    "clauses": [
      {
        "id": "parched",
        "text": "  Parched",
        "color": "c_white_red",
        "condition": { "compare_num": [ { "u_val": "instant_thirst" }, ">", { "const": 520 } ] }
      },
      {
        "id": "dehydrated",
        "text": "Dehydrated",
        "color": "light_red",
        "condition": {
          "and": [
            { "compare_num": [ { "u_val": "instant_thirst" }, ">", { "const": 240 } ] },
            { "compare_num": [ { "u_val": "instant_thirst" }, "<=", { "const": 520 } ] }
          ]
        }
      },
      {
        "id": "very_thirsty",
        "text": "V. thirsty",
        "color": "red",
        "condition": {
          "and": [
            { "compare_num": [ { "u_val": "instant_thirst" }, ">", { "const": 80 } ] },
            { "compare_num": [ { "u_val": "instant_thirst" }, "<=", { "const": 240 } ] }
          ]
        }
      },
      {
        "id": "thirsty",
        "text": " Thirsty",
        "color": "yellow",
        "condition": {
          "and": [
            { "compare_num": [ { "u_val": "instant_thirst" }, ">", { "const": 40 } ] },
            { "compare_num": [ { "u_val": "instant_thirst" }, "<=", { "const": 80 } ] }
          ]
        }
      },
      {
        "id": "neutral",
        "text": "",
        "color": "white",
        "condition": {
          "and": [
            { "compare_num": [ { "u_val": "instant_thirst" }, ">=", { "const": 0 } ] },
            { "compare_num": [ { "u_val": "instant_thirst" }, "<=", { "const": 40 } ] }
          ]
        }
      },
      {
        "id": "slaked",
        "text": "  Slaked",
        "color": "green",
        "condition": {
          "and": [
            { "compare_num": [ { "u_val": "instant_thirst" }, ">=", { "const": -20 } ] },
            { "compare_num": [ { "u_val": "instant_thirst" }, "<", { "const": 0 } ] }
          ]
        }
      },
      {
        "id": "hydrated",
        "text": " Hydrated",
        "color": "green",
        "condition": {
          "and": [
            { "compare_num": [ { "u_val": "instant_thirst" }, ">=", { "const": -60 } ] },
            { "compare_num": [ { "u_val": "instant_thirst" }, "<", { "const": -20 } ] }
          ]
        }
      },
      {
        "id": "turgid",
        "text": "  Turgid",
        "color": "green",
        "condition": { "compare_num": [ { "u_val": "instant_thirst" }, "<", { "const": -60 } ] }
      }
    ],
	"flags": [ "W_LABEL_NONE" ]
  },
  {
	"id": "zenfs_thirst_desc",
	"type": "widget",
	"style": "layout",
	"arrange": "columns",
	"width": 10,
	"widgets": [ "zenfs_thirst_no_label" ]
  }
]