        "effects": [ { "id": "Shadow_Reveal", "duration": 60, "chance": 100 } ],
        "damage_max_instance": [ { "damage_type": "pure", "amount": 0.0 } ],
        "no_dmg_msg_u": "The shadows recede, leaving you with nowhere to hide!",
