    "name": { "str": "Wretch Hurt Self", "//~": "NO_I18N" },
    "description": { "str": "Hurts yourself.", "//~": "NO_I18N" },
    "flags": [ "RANDOM_DAMAGE", "NO_PROJECTILE", "NO_EXPLOSION_SFX" ],
