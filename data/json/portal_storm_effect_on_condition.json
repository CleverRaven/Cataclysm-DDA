  {
    "type": "effect_on_condition",
    "id": "EOC_CAUSE_EARLY_PORTAL_STORM",
    "global": true,
    "//": "This sets up all the variables for the start of an early portal storm.",
    "condition": {
      "not": {
        "or": [
          { "is_weather": "portal_storm" },
