      "place_npcs": [
        { "class": "FM_caravan_merchant_random", "x": 5, "y": 4 },
        { "class": "FM_caravan_guard_A", "x": 4, "y": 1 },
        { "class": "FM_caravan_guard_B", "x": 4, "y": 2 }
