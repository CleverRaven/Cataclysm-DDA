[
  {
    "type": "effect_on_condition",
    "id": "EOC_RandEnc_Roadstop_add",
    "eoc_type": "OM_MOVE",
    "condition": {
      "and": [
        { "u_near_om_location": "roadstop_a", "range": 2 },
        "is_day",
        { "one_in_chance": 10 },
        { "days_since_cataclysm": 7 },
