[
  {
    "type": "effect_on_condition",
    "id": "EOC_RandEnc_RC_Shoppers_add",
    "//": "Adds random survivors visiting the refugee center to shop",
    "recurrence": 6000,
    "global": true,
    "condition": {
      "and": [
        { "u_near_om_location": "evac_center_13", "range": 2 },
        "is_day",
        { "one_in_chance": 10 },
        { "days_since_cataclysm": 12 },
