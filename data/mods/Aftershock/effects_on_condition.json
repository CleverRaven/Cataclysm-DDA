[
  {
    "type": "effect_on_condition",
    "id": "afs_night_messages",
    "recurrence": [ "8 hours", "72 hours" ],
    "condition": { "and": [ { "one_in_chance": 3 }, { "not": "is_day" }, "u_can_see", { "is_weather": "clear" }, "u_is_outside" ] },
    "effect": [ { "u_message": "AFS_NIGHT_MESSAGES_1", "snippet": true } ]
  },
  {
    "type": "effect_on_condition",
    "id": "afs_motion_sensor_eoc",
    "condition": { "u_has_items": { "item": "afs_motion_sensor_on", "charges": 1 } },
    "effect": [
      {
        "run_eocs": [
          {
            "id": "afs_motion_sensor_audio_warning_high",
            "condition": { "math": [ "u_monsters_nearby('radius': 24)", ">", "15" ] },
            "effect": [ { "u_message": "The motion detector whines distressingly!", "type": "warning" } ],
            "false_effect": {
              "run_eocs": [
                {
                  "id": "afs_motion_sensor_audio_warning_medium",
                  "condition": { "math": [ "u_monsters_nearby('radius': 24)", ">", "5" ] },
                  "effect": [ { "u_message": "The motion detector emits a short series of warning beeps.", "type": "warning" } ],
                  "false_effect": {
                    "run_eocs": [
                      {
                        "id": "afs_motion_sensor_audio_warning_low",
                        "condition": { "math": [ "u_monsters_nearby('radius': 24)", ">", "1" ] },
                        "effect": [ { "u_message": "The motion detector emits a single warning beep.", "type": "info" } ]
                      }
                    ]
                  }
                }
              ]
            }
          }
        ]
      },
      { "u_adjust_var": "afs_motion_sensor_ping", "type": "flag", "context": "motion_sensor", "adjustment": 1 },
      { "queue_eocs": "afs_motion_sensor_eoc_end_ping", "time_in_future": [ "2 seconds", "2 seconds" ] }
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "afs_motion_sensor_eoc_end_ping",
    "effect": [ { "u_add_var": "afs_motion_sensor_ping", "type": "flag", "context": "motion_sensor", "value": "0" } ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_ESCAPE_POD_CHAIR",
    "effect": [
      {
        "u_location_variable": { "global_val": "new_map" },
        "target_params": { "om_terrain": "afs_crashed_escape_pod", "search_range": 500, "z": 0 },
        "terrain": "t_metal_floor",
        "target_max_radius": 30,
        "min_radius": 0,
        "max_radius": 0
      },
      {
        "u_message": "You make sure there are no lose items in the pod that would become projectiles during launch before you strap yourself into the escape pod seat and press the launch button.  With an incredibly loud roar and a massive acceleration that presses you into the seat, the escape pod fires from the ship, plummeting towards the planet below.",
        "popup": true
      },
      { "u_teleport": { "global_val": "new_map" }, "force": true }
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "afs_flickering_lights",
    "recurrence": [ "15 seconds", "72 seconds" ],
    "condition": { "and": [ { "one_in_chance": 3 }, { "not": "is_day" }, "u_can_see", { "is_weather": "clear" }, "u_is_inside" ] },
    "effect": [ { "u_message": "The lights flicker off and on" } ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_FLICKERING_LIGHTS",
    "global": true,
    "effect": [
      {
        "arithmetic": [
          { "global_val": "var", "var_name": "light_transform_radius" },
          "=",
          { "global_val": "var", "var_name": "ps_str" },
          "+",
          { "const": 5 }
        ]
      },
      {
        "u_location_variable": { "global_val": "light_transform" },
        "min_radius": 15,
        "max_radius": 60,
        "indoor_only": true
      },
      {
        "u_make_sound": "a warbling alarm.",
        "target_var": { "global_val": "light_transform" },
        "volume": 60,
        "type": "alert"
      },
      {
        "u_transform_radius": { "global_val": "light_transform_radius", "default": 5 },
        "ter_furn_transform": "flickering_light_off_transform",
        "target_var": { "global_val": "light_transform" }
      },
      {
        "u_transform_radius": { "global_val": "light_transform_radius", "default": 5 },
        "ter_furn_transform": "flickering_light_transform",
        "target_var": { "global_val": "light_transform" },
        "time_in_future": [ "5 seconds", "35 seconds" ]
      },
      {
        "u_transform_radius": { "global_val": "light_transform_radius", "default": 5 },
        "ter_furn_transform": "flickering_light2_off_transform",
        "target_var": { "global_val": "light_transform" }
      },
      {
        "u_transform_radius": { "global_val": "light_transform_radius", "default": 5 },
        "ter_furn_transform": "flickering_light2_transform",
        "target_var": { "global_val": "light_transform" },
        "time_in_future": [ "5 seconds", "35 seconds" ]
      },
      {
        "u_transform_radius": { "global_val": "light_transform_radius", "default": 5 },
        "ter_furn_transform": "flickering_light3_off_transform",
        "target_var": { "global_val": "light_transform" }
      },
      {
        "u_transform_radius": { "global_val": "light_transform_radius", "default": 5 },
        "ter_furn_transform": "flickering_light3_transform",
        "target_var": { "global_val": "light_transform" },
        "time_in_future": [ "5 seconds", "35 seconds" ]
      }
    ]
  },
  {
    "type": "ter_furn_transform",
    "id": "flickering_light_off_transform",
    "terrain": [ { "result": [ "t_metal_floor_olight" ], "valid_terrain": [ "t_metal_floor_olight_off" ] } ]
  },
  {
    "type": "ter_furn_transform",
    "id": "flickering_light_transform",
    "terrain": [ { "result": [ "t_metal_floor_olight_off" ], "valid_terrain": [ "t_metal_floor_olight" ] } ]
  },
  {
    "type": "ter_furn_transform",
    "id": "flickering_light2_off_transform",
    "terrain": [ { "result": [ "t_metal_floor_olight2" ], "valid_terrain": [ "t_metal_floor_olight2_off" ] } ]
  },
  {
    "type": "ter_furn_transform",
    "id": "flickering_light2_transform",
    "terrain": [ { "result": [ "t_metal_floor_olight2_off" ], "valid_terrain": [ "t_metal_floor_olight2" ] } ]
  },
  {
    "type": "ter_furn_transform",
    "id": "flickering_light3_off_transform",
    "terrain": [ { "result": [ "t_metal_floor_olight3" ], "valid_terrain": [ "t_metal_floor_olight_off3" ] } ]
  },
  {
    "type": "ter_furn_transform",
    "id": "flickering_light3_transform",
    "terrain": [ { "result": [ "t_metal_floor_olight3_off" ], "valid_terrain": [ "t_metal_floor_olight3" ] } ]
  }
]
