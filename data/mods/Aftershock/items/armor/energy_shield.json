    "description": "Creates a shield.",
    "valid_targets": [ "self" ],
    "flags": [ "VERBAL", "NO_FAIL", "CONCENTRATE", "SOMATIC", "PERMANENT_ALL_LEVELS", "NO_EXPLOSION_SFX" ],
    "min_range": 0,
    "max_range": 0,
