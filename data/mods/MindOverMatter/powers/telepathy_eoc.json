              {
                "math": [ "u_val('npc_anger')", "=", "max(-10, (u_val('npc_anger') - (u_mood_stabilized_power_level / 2)))" ]
              },
              {
                "math": [ "u_val('npc_trust')", "=", "min(20, (u_val('npc_trust') + (u_mood_stabilized_power_level / 4)))" ]
