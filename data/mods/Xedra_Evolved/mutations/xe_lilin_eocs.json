  {
    "type": "effect_on_condition",
    "id": "EOC_LILIN_GAIN_POWERS_AT_NIGHT_ACTIVE",
    "condition": {
      "and": [
        "u_is_outside",
        { "not": "is_day" },
        { "x_in_y_chance": { "x": { "math": [ "u_lilin_amount_of_ruach_spent_for_powers" ] }, "y": 250 } }
      ]
    },
    "effect": [
      {
