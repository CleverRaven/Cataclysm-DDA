            "type": "good"
          },
          { "math": [ "u_vitamin('mutagen_lilin')", "+=", "2500" ] },
          { "math": [ "u_vitamin('mutagen')", "+=", "1000" ] },
          { "u_mutate": 0 },
          { "math": [ "u_vitamin('mutagen_lilin')", "-=", "2500" ] },
          { "math": [ "u_vitamin('mutagen')", "-=", "1000" ] },
