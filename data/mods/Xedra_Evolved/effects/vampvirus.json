            "effect": [
              { "u_add_effect": "vampire_virus", "intensity": 1, "duration": "PERMANENT" },
              { "u_lose_trait": "VAMPIRE2" },
              { "u_lose_trait": "COAGULANTWEAVE" },
              { "u_lose_trait": "BLOODHEAL" },
              {
