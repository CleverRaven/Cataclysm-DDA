          "+=",
          "(50 * bloodthorn_druid_traits_sum_as_npc() ) + (25 * n_sum_traits_of_category_char_has('ARVORE_ALCHEMY') )"
        ]
      },
      { "math": [ "u_vitamin('blood') += _blood_bonus" ] },
      { "math": [ "u_vitamin('redcells') += _blood_bonus" ] }
    ]
  },
