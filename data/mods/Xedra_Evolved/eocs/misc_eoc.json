        "u_is_outside"
      ]
    },
    "deactivate_condition": {
      "not": {
        "or": [ { "is_weather": "portal_storm" }, { "is_weather": "distant_portal_storm" }, { "is_weather": "close_portal_storm" } ]
      }
    },
    "effect": [
      { "math": [ "u_stormwrought_blood_charge++" ] },
