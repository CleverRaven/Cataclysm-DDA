  },
  {
    "//": "Extend with the danger widget",
    "copy-from": "spacebar",
    "type": "widget",
    "id": "spacebar",
    "extend": { "widgets": [ "sky_island_expedition_timer" ] }
  },
  {
    "id": "sky_island_expedition_timer",
    "type": "widget",
    "label": "Expedition Timer",
    "style": "text",
    "clauses": [
      {
        "id": "eight_left",
        "text": "+-+-+-+-+-+-+-+",
        "color": "_reen",
        "condition": { "math": [ "timeawayfromhome", "<=", "1" ] },
      },
       {
        "id": "seven_left",
        "text": "+-+-+-+-+-+-+",
        "color": "light_green",
        "condition": { "math": [ "timeawayfromhome", "<=", "2" ] },
      },
      
       {
        "id": "six_left",
        "text": "+-+-+-+-+-+",
        "color": "light_green",
        "condition": { "math": [ "timeawayfromhome", "<=", "3" ] },
      },
       {
        "id": "five_left",
        "text": "+-+-+-+-+",
        "color": "yellow",
        "condition": { "math": [ "timeawayfromhome", "<=", "4" ] },
      },
      
       {
        "id": "four_left",
        "text": "+-+-+-+",
        "color": "yellow",
        "condition": { "math": [ "timeawayfromhome", "<=", "5" ] },
      },
      
       {
        "id": "three_left",
        "text": "+-+-+",
        "color": "yellow",
        "condition": { "math": [ "timeawayfromhome", "<=", "6" ] },
      },
      
       {
        "id": "two_left",
        "text": "+-+",
        "color": "light_red",
        "condition": { "math": [ "timeawayfromhome", "<=", "7" ] },
      },
      
       {
        "id": "one_left",
        "text": "+",
        "color": "light_red",
        "condition": { "math": [ "timeawayfromhome", "<=", "8" ] },
      },
      
       {
        "id": "over_deadline",
        "text": "DANGER",
        "color": "red",
        "condition": { "math": [ "timeawayfromhome", "<=", "9" ] },
      },

      
      
       {
        "id": "over_deadline_one",
        "text": "SEVERE DANGER",
        "color": "red",
        "condition": { "math": [ "timeawayfromhome", "<=", "10" ] },
      },

      
       {
        "id": "over_deadline_two",
        "text": "EXTREME DANGER",
        "color": "magenta",
        "condition": { "math": [ "timeawayfromhome", "<=", "11" ] },
      },

      
       {
        "id": "over_deadline_three",
        "text": "CATASTROPHIC DANGER",
        "color": "magenta",
        "condition": { "math": [ "timeawayfromhome", "<=", "12" ] },
      },

      
       {
        "id": "over_deadline_four",
        "text": "DEATH IMMINENT",
        "color": "magenta",
        "condition": { "math": [ "timeawayfromhome", ">", "12" ] },
      }
    ]
  }
]
