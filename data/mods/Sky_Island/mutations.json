    "condition": {
      "and": [
        { "u_has_trait": "mut_skyisland_temperature_adaptation" },
        { "u_at_om_location": "sky_island_core" },
        { "not": { "u_has_trait": "mut_skyisland_personal_temperature_adaptation" } }
      ]
    },
    "effect": [ { "run_eocs": "EOC_SKY_ISLAND_CLIMATE_RESET" } ]
  },
  {
